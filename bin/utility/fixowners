#!/bin/bash
source "${PWD}"/.tech/.bootstrap

echo "Correcting filesystem ownerships..."

if [ -z "$1" ]; then
  "${BIN_DIRECTORY}"/utility/rootnotty chown -R "${APPLICATION_USER}":"${APPLICATION_USER}" /app
else
  "${BIN_DIRECTORY}"/utility/rootnotty chown -R "${APPLICATION_USER}":"${APPLICATION_USER}" /app/"$1"
fi

echo "Filesystem ownerships corrected"
