#!/bin/bash
source "${PWD}"/.tech/.bootstrap

[ -z "$1" ] && echo "Please specify a directory or file to copy to container (ex. vendor, --all)" && exit

echo "Copying from host to container..."

if [ "$1" == "--all" ]; then
  docker cp "${APP_DIRECTORY}"/./ application.simplypaving.docker:/app/
  echo "Completed copying all files from host to container"
else
  if [ -f "$1" ]; then
    docker cp "${APP_DIRECTORY}"/"$1" application.simplypaving.docker:/app/"$1"
  else
    docker cp "${APP_DIRECTORY}"/"$1" application.simplypaving.docker:/app/"$(dirname "$1")"
  fi
  "${BIN_DIRECTORY}"/fixowners "$1"
  "${BIN_DIRECTORY}"/fixperms "$1"
  echo "Completed copying $1 from host to container"
fi
