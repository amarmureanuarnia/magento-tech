#!/bin/bash
source "${PWD}"/.tech/.bootstrap

[ -z "$1" ] && echo "Please specify a directory or file to copy from container (ex. vendor, --all)" && exit

if [ "$1" == "--all" ]; then
  docker cp application.simplypaving.docker:/app/./ "${APP_DIRECTORY}"/
  echo "Completed copying all files from container to host"
else
  if [ -f "$1" ]; then
    docker cp application.simplypaving.docker:/app/"$1" "${APP_DIRECTORY}"/"$1"
  else
    docker cp application.simplypaving.docker:/app/"$1" "${APP_DIRECTORY}"/"$(dirname "$1")"
  fi
  echo "Completed copying $1 from container to host"
fi
